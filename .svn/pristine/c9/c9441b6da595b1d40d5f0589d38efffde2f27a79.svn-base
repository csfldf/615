<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>employeeSelect</title>
    <meta http-equiv="Content-Type" charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="../css/bootstrap.css">
    <link rel="stylesheet" href="../css/mmGrid.css">
    <link rel="stylesheet" href="../css/mmGrid-bootstrap.css">
    <link rel="stylesheet" href="../css/mmPaginator.css">
    <link rel="stylesheet" href="../css/mmPaginator-bootstrap.css">
    <script src="../js/jquery-1.11.1.js"></script>
    <script src="../js/mmGrid.js"></script>
    <script src="../js/mmPaginator.js"></script>
</head>
<body>
<table id="mmg" class="mmg"></table>
<div id="pg" style="text-align: right;"></div>
<script>
    $(function(){
        var items=[{planSerialNumber:1000,planCode:'L100',planName:'plan1'},
            {planSerialNumber:1001,planCode:'L101',planName:'plan2'},
            {planSerialNumber:1002,planCode:'L102',planName:'plan3'}]
        var cols=[
            {title:'PlanX',cols:[
                {title:'planSerialNumber',name:'planSerialNumber',sortable:true},
                {title:'planCode',name:'planCode',sortable:true}
            ]},
            {title:'planName',name:'planName',sortable:true}
        ];
        var mmg = $('.mmg').mmGrid({
            height: 400
            , cols: cols
            //, url: 'data/stockQuotePage.json'
            , method: 'get'
            , remoteSort:false
            , items: items
            , sortName: 'SECUCODE'
            , sortStatus: 'asc'
            , multiSelect: true
            , checkCol: true
            , fullWidthRows: true
            , autoLoad: false
            , plugins: [
                $('#pg').mmPaginator({totalCount:3})
            ]
            , params: function(){
                //如果这里有验证，在验证失败时返回false则不执行AJAX查询。
                return {
                    secucode: $('#secucode').val()
                }
            }
        }).load();
    })
</script>
</body>
</html>